<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Carrot"
    tools:context=".NotValidActivity">


    <TextView
        android:id="@+id/notValid"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="150dp"
        android:gravity="center"
        android:text="@string/Code_not_valid_try_again"
        android:textSize="35sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/backCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120sp"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:text="@string/try_another_code"
        android:textColor="@color/black"
        android:textSize="15sp"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/backMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30sp"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:text="@string/back_to_menu"
        android:textColor="@color/black"
        android:textSize="15sp"
        tools:ignore="TextContrastCheck" />

</RelativeLayout>